<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame"
    tools:context="com.turkcell.gelecegiyazanlar.FragmentPaketi.BizeUlasinFragment"
    android:background="#ffffffff">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp" tools:context=".MainActivity"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <TextView android:text="Geleceği Yazanlar portalıyla ilgili her türlü şikayet ve önerilerinizi buradan bizimle paylaşabilirsiniz."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:gravity="center"
                android:editable="false"
                android:textColor="#4b5b6b"
                android:paddingTop="5dp"/>


        </LinearLayout>

        <LinearLayout
            android:paddingTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İsim: "
                android:textSize="15dp"
                android:textColor="#3fb0e8"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:textSize="12dp"
                android:backgroundTint="#a6a7a7a7"
                android:id="@+id/editText_isim"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-posta: "
                android:textSize="15dp"
                android:textColor="#3fb0e8"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:textSize="12dp"
                android:id="@+id/editText_eposta"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konu: "
                android:textSize="15dp"
                android:textColor="#3fb0e8"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:textSize="12dp"
                android:id="@+id/editText_konu"/>


            <LinearLayout
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İleti: "
                    android:textSize="15dp"
                    android:textColor="#54c8ff"/>

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="12dp"
                    android:id="@+id/editText_ileti"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_gonder"
                android:text="Gönder"
                android:background="@color/tabDefault"
                android:textColor="@color/beyaz"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom">

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            fab:fab_addButtonColorNormal="@color/tabDefault"
            fab:fab_addButtonColorPressed="#ffcfa83e"
            fab:fab_addButtonPlusIconColor="@color/beyaz"
            fab:fab_addButtonStrokeVisible="false"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_labelsPosition="left">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/facebookNormal"
                fab:fab_colorPressed="@color/facebookKoyu"
                fab:fab_plusIconColor="@color/beyaz"
                fab:fab_icon="@drawable/face_icon"
                fab:fab_size="mini"
                fab:fab_title="Facebook" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/twitterNormal"
                fab:fab_colorPressed="@color/twitterKoyu"
                fab:fab_plusIconColor="@color/beyaz"
                fab:fab_icon="@drawable/twitter_icon"
                fab:fab_size="mini"
                fab:fab_title="Twitter" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/youtubeNormal"
                fab:fab_colorPressed="@color/youtubeKoyu"
                fab:fab_plusIconColor="@color/beyaz"
                fab:fab_icon="@drawable/youtube_icon"
                fab:fab_size="mini"
                fab:fab_title="Youtube" />

        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </LinearLayout>

</FrameLayout>
